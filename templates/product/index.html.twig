{% extends 'base.html.twig' %}

{% block title %}Boutique{% endblock %}

{% block body %}
<h1 class="mb-4">Boutique</h1>
<div class="row g-4">
    {% for product in products %}
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100 shadow-sm border-primary">
                {% if product.image %}
                    <img src="{{ asset('uploads/products/' ~ product.image) }}" class="card-img-top" alt="{{ product.title }}">
                {% else %}
                    <div class="card-img-top bg-secondary text-white d-flex align-items-center justify-content-center" style="height:180px;">Aucune image</div>
                {% endif %}
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-primary">{{ product.title }}</h5>
                    <p class="card-text small text-muted">Réf: {{ product.reference }}</p>
                    <p class="card-text">{{ product.description }}</p>
                    <div class="mt-auto">
                        <p class="fw-bold text-success mb-2">{{ product.price }} €</p>
                        <a href="{{ path('product_add_cart', {id: product.id}) }}" class="btn btn-outline-primary w-100">Ajouter au panier</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
